<!DOCTYPE html>
<html>
<head>
    <title>Add Community</title>
    <meta name="viewport" content="width=device-width" initial-scale="1.0">
    <link href="/css/partials.css" rel="stylesheet" type = "text/css">
    <link href="/css/style.css" rel="stylesheet" type = "text/css">
    <link href="/css/communities.css" rel="stylesheet" type = "text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" >
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/trumbowgy.css">
</head>

<body class="body">
    <%- include('paritials/topbar.ejs') %>
	<div id="viewscreen" >
    <%- include('paritials/sidenavbar.ejs') %>
        <div id="rightview">
                <div class="row">
                    <div class="col-lg-12">

                        <div id="commHeader">
                          <a class="btn" href="#" id="menu-btn">
                            <i class="fa fa-users"></i>
                          </a>

                          <a class="btn" href="/community/searchingCommunity" id="menu-btn">
                            <i class="fa fa-search"></i>
                          </a>

                          <a class="btn" style="float: right;margin-right:10px" href="/community/invitedCommunity" id="menu-btn">
                              Notifications
                          </a>
                        </div>

                      	<div class="container" style="margin-top:10px; padding:0px;">
                        	<div class="form col-sm-3 col-md-3 col-lg-3"></div>
                       		 	<div class="form col-sm-6 col-md-6 col-lg-6">
                         			<h3>Create Community</h3>

                           			<div class="form-group">
		                                <input class="form-control" type="text" required placeholder="Enter Community Name" maxlength="70" id="commName">
		                            </div>

              						<div class="form-group">
					                    <h4>Description</h4>

					                    <div>
					                      <textarea class="trumbowyg-textarea" rows="10" id="description" required tabindex="-1"></textarea>
					            		</div>

							            <div class="form-group ">
							                <label>Rule :</label>

							                <input class="radio radio-inline" type="radio" checked="" value="Direct" id="directadmin"> Direct
							                <input class="radio radio-inline" type="radio" value="Permission" id="permisadmin"> Permission
							            </div>

							            <div class="form-group">
							                <input class="form-control btn btn-primary" type="submit" value="Create Community" id="submit_community">
							            </div>
                        			</div> 
                     		    </div>
                            </div>
                    
                    </div>
                </div>
        </div>
    </div>

<script src="/js/trumbowgy.js"></script>
<script src="/js/addNewCommunity.js"></script>

</body>
</html>