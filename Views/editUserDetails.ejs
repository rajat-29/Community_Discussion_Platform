<%- layout('layout/layout.ejs') %>

 
  <%- include('paritials/topbar.ejs') %>
    <div id="viewscreen" >
    <%- include('paritials/sidenavbar.ejs') %>
      <div id="rightview">
          <div class="row">
            <div class="col-lg-12" >
              <div class="to-center-div">
                <div class="container">
                  <div class="panel panel-default" style="background: rgb(249, 249, 249);box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);">
                    <div class="panel-body">
                      <div class="d-flex">              
                        <div class="image-container">
                          <img src="<%= data.photoname %>" id="profilepic">
                        </div>                                
                      </div>
                      <br>
                      <br>
                      <div class="col-sm-12">
                        <div class="panel panel-default panelDiv">
                          <div class="panel-heading">Basic Info</div>
                            <div class="panel-body">
                                                  
                              <div class="form-group">
                                <label>Email :</label>
                                <input type="text" value="<%= data.email  %>" class="form-control" disabled="true" />
                              </div>

                              <div class="form-group">
                                <label>Name :</label>
                                <input type="text" value="<%= data.name  %>" class="form-control" disabled="true" />
                              </div>

                              <div class="col-sm-5 form-group" style="padding:0;">
                                <label>DOB :</label>
                                <input class="form-control dobDate" id="birth_date" value="<%= data.dob  %>" placeholder="DD-MM-YYYY" type="date" autocomplete="off" required="">
                              </div>

                              <div class="form-group col-sm-5 col-sm-push-2" style="padding:0;">
                                  <label>Gender :</label>
                                  <select name="gender" class="form-control" id="gender">
                                    <optgroup label="Select Gender" >
                                      <option value="Male" selected="">Male</option>
                                      <option value="Female">Female</option>
                                      <option value="Transgender">Transgender</option>
                                    </optgroup>
                                  </select>
                              </div>
                            </div>
                          </div>

                          <div class="panel panel-default panelDiv">
                              <div class="panel-heading">Contact Info</div>
                                <div class="panel-body">

                                  <div class="form-group">
                                      <label>Phone :</label>
                                      <input type="text" value="<%= data.phone  %>" class="form-control" name="phone" maxlength="10" required="" id="phone"
                                      />
                                  </div>

                                  <div class="form-group">
                                      <label>City :</label>
                                      <input type="text" value="<%= data.city  %>" class="form-control" name="city" required="" id="city"/>
                                  </div>

                                </div>
                            </div>

                            <div class="panel panel-default panelDiv">
                              <div class="panel-heading">Personal Info</div>
                            <div class="panel-body">

                            <div class="form-group">
                              <label>Interests :</label>
                              <input type="text" value="" class="form-control" name="interests" placeholder="Enter Interests:" required="" id="interest" />

                              <div class="form-group">
                                  <label>Tell us a bit more about your journey:</label>
                                  <textarea type="text" id="journey" class="form-control"></textarea>
                              </div>

                              <div class="form-group">
                                  <label>What are your expectations from the communities?</label>
                                  <textarea type="text" id="expectation" class="form-control" name="comExpectations"></textarea>
                              </div>

                            </div>
                          </div>
                        </div>

                        <div class="form-group">

                          <a href="/login/changePassword" class="btn btn-warning pull-left">Change Password</a>

                          <a href="#" class="btn btn-danger pull-right" style="margin:1px" id="canceling">Cancel</a>
                          <input type="submit" class="btn btn-primary pull-right " style="margin:1px" value="Update" onclick="updateUserDetails()">
                        </div>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>


<script type="text/javascript" src="js/editUserDetails.js"></script>

</html>