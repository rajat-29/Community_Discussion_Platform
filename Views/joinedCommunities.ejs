<!DOCTYPE html>
<html >
<head>
    <title>Joined Communities</title>
    <meta name="viewport" content="width=device-width" initial-scale="1.0">
    <link href="css/partials.css" rel="stylesheet" type = "text/css">
    <link href="css/style.css" rel="stylesheet" type = "text/css">
    <link href="css/communities.css" rel="stylesheet" type = "text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" >
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
</head>

<body class="body">
  <%- include('paritials/topbar.ejs') %>
  <div id="viewscreen" >
  <%- include('paritials/sidenavbar.ejs') %>
    <div id="rightview">
        <div class="row">
          <div class="col-lg-12">
          
              <div id="commHeader">
                  <a class="btn" href="#" id="menu-btn">
                    <i class="fa fa-users"></i>
                  </a>

                  <a class="btn" href="/community/searchingCommunity" id="menu-btn">
                    <i class="fa fa-search"></i>
                  </a>

                  <a class="btn" style="float: right;margin-right:10px" href="/community/invitedCommunity" id="menu-btn">
                      Notifications
                  </a>
              </div>

              <div class="container" >
                <div class="panel community-panel-main-div">
                  <div class="panel-heading community-panel-heading">

                    <p style="color:white;margin-top:6px;font-weight:bold">My Communities</p>

                    <div  id="createCommunity" style="visibility: hidden;">
                      <a href="/community/addNewCommunity" class="btn btn-info community-panel-btn" style="float:right;margin:-35px 5px 0 0">Create</a>
                    </div>

                  </div>

                  <div class="panel-body">
                    <div id="displayAllCommunity"></div>
                  </div>

                </div>    
              </div>  
          </div>
        </div>
    </div>
  </div>
        
<script src="/js/joinedCommunities.js"></script>

</body>
</html>

<script>
  var role = <%-JSON.stringify(data.role)%>

  if(role == "Community Manager") {
    document.getElementById('createCommunity').style.visibility = 'visible'
  }
</script>